<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jz.bigdata.common.action.dao.IActionDao">
	<!-- 返回结果设置 -->
	<resultMap id="BaseResultMap"
		type="com.jz.bigdata.common.action.entity.Action">
		<id column="id" jdbcType="VARCHAR" property="id" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="userId" jdbcType="VARCHAR" property="userId" />
		<result column="state" jdbcType="INTEGER" property="state" />
		<result column="equipmentId" jdbcType="VARCHAR" property="equipmentId" />
		<result column="type" jdbcType="VARCHAR" property="type" />
		<result column="feature" jdbcType="VARCHAR" property="feature" />
		<result column="equipmentUserId" jdbcType="VARCHAR" property="equipmentUserId" />
		<association property="user" javaType="com.jz.bigdata.common.users.entity.User">
             <id property="userId" column="id"/>
             <result property="name" column="userName"/>
        </association>
        <association property="users" javaType="com.jz.bigdata.common.users.entity.User">
             <id property="equipmentUserId" column="id"/>
             <result property="name" column="equipmentUserName"/>
        </association>
        <association property="equipment" javaType="com.jz.bigdata.common.equipment.entity.Equipment">
             <id property="equipmentId" column="id"/>
             <result property="name" column="equipmentName"/>
        </association>
	</resultMap>

	<!-- 查询字段设置可重复调用 -->
	<!-- 部门id,name:部门名称,level:部门层级,superiorId:上级id,subordinate:是否有下级（1有0没有）,orderId:位置排序,comment:简介 -->
	<sql id="Base_Column_List">
		id, name, userId, state, equipmentId,type,feature,equipmentUserId
	</sql>

	<!-- 查询所有数据 -->
	<select id="selectAll" 
		resultMap="BaseResultMap">
		<!-- <bind name="name" value="'%' + name + '%'" /> -->
		select  action.id, action.name, action.userId, action.state, equipmentId,action.type,feature,equipmentUserId,a.`name` AS userName,b.`name` AS equipmentUserName ,equipment.`name` as equipmentName FROM action 
		LEFT JOIN user AS a on action.userId=a.id 

		LEFT JOIN user AS b on action.equipmentUserId = b.id

		LEFT JOIN equipment on action.equipmentId = equipment.id
	</select>


	<!-- 添加数据 -->
	<insert id="insert" parameterType="com.jz.bigdata.common.action.entity.Action">
		insert into action
		<!-- 格式化 -->
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<!-- 判断参数是否为空 -->
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="userId != null">
				userId,
			</if>
			<if test="state != null ">
				state,
			</if>
			<if test="equipmentId != null">
				equipmentId,
			</if>
			<if test="type !=null and  type !=''">
				type,
			</if>
			<if test="feature !=null and  feature !=''">
				feature,
			</if>
			<if test="equipmentUserId !=null and  equipmentUserId !=''">
				equipmentUserId
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=VARCHAR},
			</if>
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="userId != null">
				#{userId,jdbcType=VARCHAR},
			</if>
			<if test="state != null ">
				#{state,jdbcType=INTEGER},
			</if>
			<if test="equipmentId != null">
				#{equipmentId,jdbcType=VARCHAR},
			</if>
			<if test="type !=null ">
				#{type,jdbcType=VARCHAR},
			</if>
			<if test="feature !=null ">
				#{feature,jdbcType=VARCHAR},
			</if>
			<if test="equipmentUserId !=null ">
				#{equipmentUserId,jdbcType=VARCHAR}
			</if>

		</trim>
	</insert>
	<!-- 删除数据 -->
	<delete id="delete" parameterType="java.lang.String">
		delete from action where
		id = #{id,jdbcType=VARCHAR}
	</delete>
	
	<!-- 根据id修改信息 -->
	<update id="updateById" parameterType="com.jz.bigdata.common.action.entity.Action">
		update action set
		name=#{name},state=#{state}
		where id=#{id}
	</update>

	<!-- 根据事件id查询动作数据 -->
	<select id="selectActionByEventId" parameterType="java.lang.String"
		resultMap="BaseResultMap">
		select action.id, action.name, action.userId, action.state,
		equipmentId,action.type,feature,equipmentUserId,a.`name` AS
		userName,b.`name` AS equipmentUserName ,equipment.`name` as
		equipmentName ,action_event.`order` FROM action_event

		LEFT JOIN action on action_event.actionId=action.id
		LEFT JOIN user AS a on action.userId=a.id

		LEFT JOIN user AS b on action.equipmentUserId = b.id

		LEFT JOIN equipment on action.equipmentId = equipment.id

		WHERE action_event.eventId=#{eventId,jdbcType=VARCHAR}
	</select>

</mapper>