 	<select id="selectByName" parameterType="com.jz.bigdata.common.users.entity.User" resultMap="BaseResultMap">
<!--   <bind name="name" value="'%' + name + '%'" /> -->
	   select 
		user.id, user.name, phone, password, sex,age,email,departmentId,role,state
	   
	    from user
