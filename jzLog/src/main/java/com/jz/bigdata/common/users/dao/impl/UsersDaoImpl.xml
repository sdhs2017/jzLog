	    , department.`name` AS departmentName 
	    from user, department
	    where 1=1 and department.id=`user`.departmentId
	   
	    <if test="_parameter != null and _parameter !=''" >
	    	and user.id = #{_parameter,jdbcType=VARCHAR} 
	    </if>
  
